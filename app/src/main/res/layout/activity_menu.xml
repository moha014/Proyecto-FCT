<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <!-- Toolbar simplificada solo con la X -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="550dp"
        android:layout_height="250dp"
        android:background="@drawable/iberdrolalogo"
        android:gravity="center"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Textos encima de los botones -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="125dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIENVENIDO"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOHAMMED"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <View
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

    <!-- Contenedor para los botones centrados -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="33dp">

        <Button
            android:id="@+id/btnFacturas"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="50dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:padding="15dp"
            android:text="📋Facturas"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="18dp" />

        <Button
            android:id="@+id/btnSmartSolar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnFacturas"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:padding="15dp"
            android:text="☀️Smart Solar"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="18dp" />

    </RelativeLayout>

</LinearLayout>
